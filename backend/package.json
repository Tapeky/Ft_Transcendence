{
  "name": "ft-transcendence-backend",
  "version": "1.0.0",
  "description": "Backend for ft_transcendence project",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "echo \"Tests à implémenter\" && exit 0",
    "db:reset": "rm -f ../db/*.db && ts-node src/scripts/init-db.ts",
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:stats": "ts-node src/scripts/db-stats.ts",
    "db:clean-tournaments": "ts-node src/scripts/clean-tournaments.ts",
    "db:migrate-tournaments": "ts-node src/scripts/migrate-tournaments.ts",
    "test:tournament-flow": "ts-node src/scripts/test-tournament-flow.ts",
    "test:tournament-invites": "ts-node src/scripts/test-tournament-invites.ts",
    "clean": "rm -rf dist/",
    "lint": "echo \"Linting à configurer\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^8.2.0",
    "bcrypt": "^5.1.1",
    "fastify": "^4.26.2",
    "formdata-node": "^6.0.3",
    "sharp": "^0.34.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.30",
    "@types/sharp": "^0.31.1",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "fastify",
    "typescript",
    "pong",
    "websocket",
    "sqlite"
  ],
  "author": "ft_transcendence team",
  "license": "ISC"
}
