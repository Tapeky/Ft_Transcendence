{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "rootDir": ".",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "types": ["jest", "node"],
	  "moduleResolution": "node",
	  "allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "tests/**/*"]
  }
  