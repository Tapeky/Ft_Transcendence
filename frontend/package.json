{
  "name": "ft-transcendence-frontend",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --config configs/vite.config.ts",
    "build": "tsc --project configs/tsconfig.json && vite build --config configs/vite.config.ts",
    "preview": "vite preview --config configs/vite.config.ts",
    "start": "vite --config configs/vite.config.ts",
    "prettier:check": "prettier --check \"src/**/*.{ts,js,json,css,md}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,js,json,css,md}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,js,json,css,md}\"",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "deadcode": "ts-prune --project configs/tsconfig.json"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.36.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "postcss": "^8.4.38",
    "postcss-import": "^16.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.4.2",
    "vite": "^5.2.4",
	"qrcode": "^1.5.4"
  }
}
